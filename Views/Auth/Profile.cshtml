@using MangaReader.Models
@{
    ViewData["Title"] = "My Profile";
    User user = ViewBag.User as User;
    List<UserBookmark> bookmarks = ViewBag.Bookmarks as List<UserBookmark>;
    string currentStatus = ViewBag.CurrentStatus as string;
    IEnumerable<dynamic> unlockedDecorations = (ViewBag.UnlockedDecorations as IEnumerable<object>) ?? Enumerable.Empty<object>();
    IEnumerable<dynamic> unlockedTitles = (ViewBag.UnlockedTitles as IEnumerable<object>) ?? Enumerable.Empty<object>();
    string defaultAvatar = "https://wallpapers-clan.com/wp-content/uploads/2022/08/default-pfp-24.jpg";
    string profileAvatarUrl = !string.IsNullOrWhiteSpace(user?.ProfilePicture) ? user.ProfilePicture : (!string.IsNullOrWhiteSpace(user?.AvatarUrl) ? user.AvatarUrl : defaultAvatar);
    PfpDecoration equippedDec = user?.EquippedDecoration;
    UserTitle equippedTitle = user?.EquippedTitle;
}

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="gradient-text mb-2" style="color: #ffffff;">
                <i class="fas fa-user-circle me-2"></i>@user?.Username's Profile
            </h1>
            <div class="d-flex align-items-center gap-3 mb-4">
                <div class="position-relative d-flex align-items-center justify-content-center" style="width:80px; height:80px;">
                    <img src="@profileAvatarUrl" alt="Avatar" style="width:100%; height:100%; border-radius:50%; object-fit:cover; border:2px solid var(--border-color); z-index: 1; position: relative;" onerror="this.src='@defaultAvatar'" />
                    @if (equippedDec != null && ViewBag.EnableDecorations == "true")
                    {
                        <img src="@equippedDec.ImageUrl" alt="Decoration" style="position: absolute; top: 50%; left: 50%; width: 120%; height: 120%; transform: translate(-50%, -50%); pointer-events: none; z-index: 2;" />
                    }
                </div>
                <div>
                    <div class="d-flex align-items-center gap-3 mb-1">
                        <h2 class="mb-0">@user?.Username</h2>
                        <a href="@Url.Action("PublicProfile", "Auth", new { id = user?.Id })" class="btn btn-sm btn-outline-primary" style="border-radius: 20px; font-size: 0.75rem;">
                            <i class="fas fa-external-link-alt me-1"></i>View Public Profile
                        </a>
                    </div>
                    @if (equippedTitle != null && ViewBag.EnableTitles == "true")
                    {
                        <div class="mb-2">
                            <span class="badge" style="background: rgba(0,0,0,0.2); border: 1px solid @(equippedTitle.Color ?? "transparent"); color: @(equippedTitle.Color ?? "inherit"); font-weight: bold; font-size: 0.9rem; padding: 4px 10px;">
                                @equippedTitle.Name
                            </span>
                        </div>
                    }
                    <div class="d-flex align-items-center gap-2 mt-2">
                        <span class="badge bg-primary">Level @user?.Level</span>
                        <div class="progress" style="height: 10px; width: 150px; background: var(--bg-tertiary); border-radius: 5px; margin-bottom: 0;">
                            <div class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar" 
                                 style="width: @ViewBag.XpProgress%; background: linear-gradient(90deg, #6366f1, #ec4899);" 
                                 aria-valuenow="@user?.XP" aria-valuemin="0" aria-valuemax="@ViewBag.XpToNextLevel"></div>
                        </div>
                        <small class="text-white-50">@user?.XP / @ViewBag.XpToNextLevel XP</small>
                    </div>
                    <p class="text-white-50 mb-0 small mt-1">Member since @user?.CreatedAt.ToString("MMMM yyyy")</p>
                </div>
            </div>

            <form asp-action="UpdateProfile" method="post" enctype="multipart/form-data" class="mt-3">
                @Html.AntiForgeryToken()
                <div class="row">
                    
                    <div class="col-md-6 mb-4">
                        <div class="card h-100" style="background: var(--bg-secondary); border: 1px solid var(--border-color);">
                            <div class="card-header" style="background: var(--bg-tertiary); border-bottom: 1px solid var(--border-color);">
                                <h5 class="mb-0 text-white"><i class="fas fa-cog me-2"></i>General Settings</h5>
                            </div>
                            <div class="card-body">
                                <div class="mb-3">
                                    <label class="form-label text-white-50 small mb-1">Update Avatar</label>
                                    <input type="file" name="pfp" accept=".jpg,.jpeg,.png,.webp,.gif" class="form-control" style="background: var(--bg-tertiary); border-color: var(--border-color); color: var(--text-primary);" />
                                    <small class="text-white-50">Max 5MB. JPG/PNG/WEBP/GIF.</small>
                                </div>
                                <div class="form-check form-switch custom-switch mb-3">
                                    <input class="form-check-input" type="checkbox" name="hideReadingList" id="hideReadingList" value="true" @(user?.HideReadingList == true ? "checked" : "")>
                                    <label class="form-check-label text-white" for="hideReadingList">
                                        <i class="fas fa-lock me-1"></i>Hide Reading List from Public
                                    </label>
                                </div>
                                <div class="form-check form-switch custom-switch mb-3">
                                    <input class="form-check-input" type="checkbox" name="disableFeaturedBanners" id="disableFeaturedBanners" value="true" @(user?.DisableFeaturedBanners == true ? "checked" : "")>
                                    <label class="form-check-label text-white" for="disableFeaturedBanners">
                                        <i class="fas fa-image-slash me-1"></i>Disable Featured Banners
                                    </label>
                                </div>
                                <div class="form-check form-switch custom-switch mb-3">
                                    <input class="form-check-input" type="checkbox" name="showAllFeaturedAsCovers" id="showAllFeaturedAsCovers" value="true" @(user?.ShowAllFeaturedAsCovers == true ? "checked" : "")>
                                    <label class="form-check-label text-white" for="showAllFeaturedAsCovers">
                                        <i class="fas fa-th-list me-1"></i>Show All Featured as Vertical Covers
                                    </label>
                                </div>
                                <div class="form-check form-switch custom-switch">
                                    <input class="form-check-input" type="checkbox" name="ignoreSuggestiveWarnings" id="ignoreSuggestiveWarnings" value="true" @(user?.IgnoreSuggestiveWarnings == true ? "checked" : "")>
                                    <label class="form-check-label text-white" for="ignoreSuggestiveWarnings">
                                        <i class="fas fa-exclamation-circle me-1"></i>Ignore Suggestive Warnings
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>

                    
                    <div class="col-md-6 mb-4">
                        <div class="card h-100" style="background: var(--bg-secondary); border: 1px solid var(--border-color);">
                            <div class="card-header d-flex justify-content-between align-items-center" style="background: var(--bg-tertiary); border-bottom: 1px solid var(--border-color);">
                                <h5 class="mb-0 text-white"><i class="fas fa-palette me-2"></i>Appearance Customization</h5>
                                <button type="button" class="btn btn-outline-danger btn-sm" onclick="document.getElementById('resetAppearanceForm').submit()">
                                    <i class="fas fa-undo me-1"></i>Reset to Default
                                </button>
                            </div>
                            <div class="card-body">
                                <div class="row mb-3">
                                    <div class="col-6">
                                        <label class="form-label text-white-50 small">Primary Color</label>
                                        <input type="color" name="customPrimaryColor" class="form-control form-control-color w-100" value="@(user?.CustomPrimaryColor ?? "#6366f1")" style="background: var(--bg-tertiary); border-color: var(--border-color);">
                                    </div>
                                    <div class="col-6">
                                        <label class="form-label text-white-50 small">Accent Color</label>
                                        <input type="color" name="customAccentColor" class="form-control form-control-color w-100" value="@(user?.CustomAccentColor ?? "#ec4899")" style="background: var(--bg-tertiary); border-color: var(--border-color);">
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <div class="col-6">
                                        <label class="form-label text-white-50 small">Background Color</label>
                                        <input type="color" name="customBackgroundColor" class="form-control form-control-color w-100" value="@(user?.CustomBackgroundColor ?? "#05070a")" style="background: var(--bg-tertiary); border-color: var(--border-color);">
                                    </div>
                                    <div class="col-6">
                                        <label class="form-label text-white-50 small">Navbar Color</label>
                                        <input type="color" name="customNavbarColor" class="form-control form-control-color w-100" value="@(user?.CustomNavbarColor ?? "#0a0d14")" style="background: var(--bg-tertiary); border-color: var(--border-color);">
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <div class="col-6">
                                        <label class="form-label text-white-50 small">Text Color</label>
                                        <input type="color" name="customTextColor" class="form-control form-control-color w-100" value="@(user?.CustomTextColor ?? "#f1f5f9")" style="background: var(--bg-tertiary); border-color: var(--border-color);">
                                    </div>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label text-white-50 small">Site Opacity (@(user?.SiteOpacity ?? 1.0))</label>
                                    <input type="range" name="siteOpacity" class="form-range" min="0.1" max="1.0" step="0.05" value="@(user?.SiteOpacity ?? 1.0)">
                                </div>
                                <div class="mb-3">
                                    <label class="form-label text-white-50 small">Custom Background URL</label>
                                    <input type="text" name="customBackgroundUrl" class="form-control" value="@user?.CustomBackgroundUrl" placeholder="https://example.com/bg.jpg" style="background: var(--bg-tertiary); border-color: var(--border-color); color: var(--text-primary);">
                                </div>
                                <div class="mb-0">
                                    <div class="d-flex justify-content-between align-items-center mb-1">
                                        <label class="form-label text-white-50 small mb-0">Custom CSS</label>
                                        <div class="d-flex gap-2">
                                            <button type="button" class="btn btn-link btn-sm p-0 text-info" data-bs-toggle="modal" data-bs-target="#cssGuideModal" title="CSS Guide">
                                                <i class="fas fa-question-circle me-1"></i>Guide
                                            </button>
                                            <a href="@Url.Action("ExportCss", "Auth")" class="btn btn-link btn-sm p-0 text-primary @(string.IsNullOrEmpty(user?.CustomCss) ? "disabled opacity-50" : "")" title="Export CSS">
                                                <i class="fas fa-file-export me-1"></i>Export
                                            </a>
                                            <button type="button" class="btn btn-link btn-sm p-0 text-primary" onclick="document.getElementById('cssImportInput').click()" title="Import CSS">
                                                <i class="fas fa-file-import me-1"></i>Import
                                            </button>
                                        </div>
                                    </div>
                                    <textarea name="customCss" class="form-control" rows="3" placeholder=".my-class { color: red; }" style="background: var(--bg-tertiary); border-color: var(--border-color); color: var(--text-primary); font-family: monospace;">@user?.CustomCss</textarea>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="text-end mb-4">
                    <button type="submit" class="btn btn-primary px-5 py-2" style="border-radius: 30px; font-weight: 600;">
                        <i class="fas fa-save me-2"></i>Save All Settings
                    </button>
                </div>
            </form>

            
            <form id="resetAppearanceForm" asp-action="ResetAppearance" method="post" style="display: none;">
                @Html.AntiForgeryToken()
            </form>

            
            <form id="importCssForm" asp-action="ImportCss" method="post" enctype="multipart/form-data" style="display: none;">
                @Html.AntiForgeryToken()
                <input type="file" id="cssImportInput" name="cssFile" accept=".css" onchange="document.getElementById('importCssForm').submit()">
            </form>

            
            <div class="modal fade" id="cssGuideModal" tabindex="-1" aria-labelledby="cssGuideModalLabel" aria-hidden="true">
                <div class="modal-dialog modal-lg modal-dialog-scrollable">
                    <div class="modal-content" style="background: var(--bg-secondary); border: 1px solid var(--border-color); color: var(--text-primary);">
                        <div class="modal-header" style="border-bottom: 1px solid var(--border-color); background: var(--bg-tertiary);">
                            <h5 class="modal-title" id="cssGuideModalLabel"><i class="fas fa-book me-2"></i>Custom CSS Guide</h5>
                            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body p-4">
                            <section class="mb-4">
                                <h6 class="text-info fw-bold mb-2"><i class="fas fa-magic me-2"></i>Global Theme Variables</h6>
                                <p class="small text-white-50">The easiest way to theme the site is by overriding these variables in the <code>:root</code> selector.</p>
                                <pre class="bg-dark p-3 rounded border border-secondary shadow-sm"><code class="text-info">:root {
  --primary-color: #6366f1;   /* Main buttons, links */
  --accent-color: #ec4899;    /* Highlights, badges */
  --bg-primary: #0f172a;      /* Main background */
  --bg-secondary: #1e293b;    /* Cards, containers */
  --bg-tertiary: #334155;     /* Inputs, headers */
  --text-primary: #f8fafc;    /* Main text */
  --text-secondary: #94a3b8;  /* Muted text */
  --border-color: rgba(255,255,255,0.1);
}</code></pre>
                            </section>

                            <section class="mb-4">
                                <h6 class="text-info fw-bold mb-2"><i class="fas fa-bars me-2"></i>Navigation & Header</h6>
                                <p class="small text-white-50">Target the top navigation bar and its elements.</p>
                                <ul class="small list-unstyled ps-3 border-start border-info">
                                    <li class="mb-1"><code>.navbar</code> - The main top navigation container</li>
                                    <li class="mb-1"><code>.nav-link</code> - Individual menu items</li>
                                    <li class="mb-1"><code>.search-input</code> - The search bar field</li>
                                    <li class="mb-1"><code>.navbar-brand</code> - Site logo/name</li>
                                </ul>
                            </section>

                            <section class="mb-4">
                                <h6 class="text-info fw-bold mb-2"><i class="fas fa-th-large me-2"></i>Manga Cards & Grid</h6>
                                <p class="small text-white-50">Customize how series look on the home and browse pages.</p>
                                <ul class="small list-unstyled ps-3 border-start border-info">
                                    <li class="mb-1"><code>.manga-card</code> - The entire card container</li>
                                    <li class="mb-1"><code>.manga-card img</code> - The cover image</li>
                                    <li class="mb-1"><code>.manga-title</code> - The title text</li>
                                    <li class="mb-1"><code>.badge-chapter</code> - Latest chapter badge</li>
                                    <li class="mb-1"><code>.manga-status</code> - Status indicators (Ongoing, etc)</li>
                                </ul>
                            </section>

                            <section class="mb-4">
                                <h6 class="text-info fw-bold mb-2"><i class="fas fa-book-open me-2"></i>Reader Page</h6>
                                <p class="small text-white-50">Styles specifically for when reading chapters.</p>
                                <ul class="small list-unstyled ps-3 border-start border-info">
                                    <li class="mb-1"><code>.reader-container</code> - Main area where images are shown</li>
                                    <li class="mb-1"><code>.chapter-image</code> - Individual page images</li>
                                    <li class="mb-1"><code>.reader-controls</code> - Top/bottom navigation bars</li>
                                    <li class="mb-1"><code>.comment-section</code> - The comments area at the bottom</li>
                                </ul>
                            </section>

                            <section>
                                <h6 class="text-info fw-bold mb-2"><i class="fas fa-user me-2"></i>Profile & UI Elements</h6>
                                <ul class="small list-unstyled ps-3 border-start border-info">
                                    <li class="mb-1"><code>.gradient-text</code> - Used for main headings</li>
                                    <li class="mb-1"><code>.card</code> - Standard content containers</li>
                                    <li class="mb-1"><code>.btn-primary</code> - Main action buttons</li>
                                    <li class="mb-1"><code>.badge</code> - Various UI labels</li>
                                </ul>
                            </section>

                            <section class="mb-4">
                                <h6 class="text-info fw-bold mb-2"><i class="fas fa-code me-2"></i>Common Customizations</h6>
                                <p class="small text-white-50">Copy and paste these snippets to get started.</p>
                                <div class="accordion accordion-flush" id="cssExamples">
                                    <div class="accordion-item bg-transparent border-0">
                                        <h2 class="accordion-header">
                                            <button class="accordion-button collapsed bg-dark text-white p-2 rounded small" type="button" data-bs-toggle="collapse" data-bs-target="#example1">
                                                Hide Elements (e.g. Featured Banner)
                                            </button>
                                        </h2>
                                        <div id="example1" class="accordion-collapse collapse" data-bs-parent="#cssExamples">
                                            <div class="accordion-body p-2">
                                                <pre class="bg-dark p-2 rounded border border-secondary mb-0"><code class="text-info">.featured-slider {
  display: none !important;
}</code></pre>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="accordion-item bg-transparent border-0 mt-2">
                                        <h2 class="accordion-header">
                                            <button class="accordion-button collapsed bg-dark text-white p-2 rounded small" type="button" data-bs-toggle="collapse" data-bs-target="#example2">
                                                Change Body Font
                                            </button>
                                        </h2>
                                        <div id="example2" class="accordion-collapse collapse" data-bs-parent="#cssExamples">
                                            <div class="accordion-body p-2">
                                                <pre class="bg-dark p-2 rounded border border-secondary mb-0"><code class="text-info">body {
  font-family: 'Poppins', sans-serif !important;
}</code></pre>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="accordion-item bg-transparent border-0 mt-2">
                                        <h2 class="accordion-header">
                                            <button class="accordion-button collapsed bg-dark text-white p-2 rounded small" type="button" data-bs-toggle="collapse" data-bs-target="#example3">
                                                Glow Effect on Titles
                                            </button>
                                        </h2>
                                        <div id="example3" class="accordion-collapse collapse" data-bs-parent="#cssExamples">
                                            <div class="accordion-body p-2">
                                                <pre class="bg-dark p-2 rounded border border-secondary mb-0"><code class="text-info">.manga-title:hover {
  text-shadow: 0 0 10px var(--primary-color);
  color: var(--primary-color) !important;
}</code></pre>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="accordion-item bg-transparent border-0 mt-2">
                                        <h2 class="accordion-header">
                                            <button class="accordion-button collapsed bg-dark text-white p-2 rounded small" type="button" data-bs-toggle="collapse" data-bs-target="#example4">
                                                Custom Card Background
                                            </button>
                                        </h2>
                                        <div id="example4" class="accordion-collapse collapse" data-bs-parent="#cssExamples">
                                            <div class="accordion-body p-2">
                                                <pre class="bg-dark p-2 rounded border border-secondary mb-0"><code class="text-info">.card, .manga-card {
  background: rgba(0, 0, 0, 0.6) !important;
  backdrop-filter: blur(10px);
}</code></pre>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </section>

                            <div class="mt-4 p-3 rounded bg-info bg-opacity-10 border border-info border-opacity-25">
                                <small class="d-block text-info fw-bold mb-1"><i class="fas fa-lightbulb me-2"></i>Pro Tip:</small>
                                <small class="text-white-50">Use <code>!important</code> if your styles aren't applying, e.g., <code>color: red !important;</code>. This ensures your custom style takes priority over the default one.</small>
                            </div>
                        </div>
                        <div class="modal-footer" style="border-top: 1px solid var(--border-color); background: var(--bg-tertiary);">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close Guide</button>
                        </div>
                    </div>
                </div>
            </div>

            
            @if (ViewBag.EnableDecorations == "true" || ViewBag.EnableTitles == "true")
            {
                <div class="row mb-4">
                    @if (ViewBag.EnableDecorations == "true")
                    {
                        <div class="@(ViewBag.EnableTitles == "true" ? "col-md-6" : "col-12") mb-4 mb-md-0">
                            <div class="card h-100" style="background: var(--bg-secondary); border: 1px solid var(--border-color);">
                                <div class="card-header d-flex justify-content-between align-items-center" style="background: var(--bg-tertiary); border-bottom: 1px solid var(--border-color);">
                                    <h4 class="mb-0 text-white"><i class="fas fa-pencil-alt me-2"></i>PFP Decorations</h4>
                                    <span class="badge bg-primary">Unlocked: @((ViewBag.AvailableDecorations as List<PfpDecoration>)?.Count(d => (user?.Level >= d.LevelRequirement && !d.IsLocked) || unlockedDecorations.Any(ud => (int)((dynamic)ud).DecorationId == d.Id)) ?? 0)</span>
                                </div>
                                <div class="card-body">
                                    <div class="decoration-grid">
                                        <div class="decoration-item @(user?.EquippedDecorationId == null ? "active" : "")" onclick="equipDecoration(0)">
                                            <div class="decoration-preview">
                                                <img src="@profileAvatarUrl" alt="No Decoration" />
                                            </div>
                                            <div class="decoration-info">
                                                <p class="mb-0 text-white">None</p>
                                            </div>
                                        </div>
                                        @if (ViewBag.AvailableDecorations is List<PfpDecoration> decs)
                                        {
                                            foreach (var dec in decs)
                                            {
                                                var unlockedInfo = unlockedDecorations.FirstOrDefault(ud => (int)((dynamic)ud).DecorationId == dec.Id);
                                                bool isAwarded = unlockedInfo != null && ((dynamic)unlockedInfo).Origin == UnlockOrigin.AdminAward;
                                                bool canEquip = (user?.Level >= dec.LevelRequirement && !dec.IsLocked) || unlockedInfo != null;
                                                <div class="decoration-item @(user?.EquippedDecorationId == dec.Id ? "active" : "") @(!canEquip ? "locked" : "")" onclick="@(canEquip ? $"equipDecoration({dec.Id})" : "")">
                                                    <div class="decoration-preview">
                                                        <img src="@profileAvatarUrl" alt="Avatar" />
                                                        @if (canEquip)
                                                        {
                                                            <img src="@dec.ImageUrl" class="dec-overlay" alt="@dec.Name" />
                                                        }
                                                        else
                                                        {
                                                            <div class="lock-overlay">
                                                                <i class="fas fa-lock"></i>
                                                                @if (user?.Level < dec.LevelRequirement)
                                                                {
                                                                    <span>Lvl @dec.LevelRequirement</span>
                                                                }
                                                                else
                                                                {
                                                                    <span>Locked</span>
                                                                }
                                                            </div>
                                                        }
                                                    </div>
                                                    <div class="decoration-info">
                                                        <p class="mb-0 text-white">@dec.Name</p>
                                                        @if (isAwarded)
                                                        {
                                                            <span class="badge bg-warning text-dark" style="font-size: 0.6rem;">Awarded</span>
                                                        }
                                                    </div>
                                                </div>
                                            }
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    }

                    @if (ViewBag.EnableTitles == "true")
                    {
                        <div class="@(ViewBag.EnableDecorations == "true" ? "col-md-6" : "col-12")">
                            <div class="card h-100" style="background: var(--bg-secondary); border: 1px solid var(--border-color);">
                                <div class="card-header d-flex justify-content-between align-items-center" style="background: var(--bg-tertiary); border-bottom: 1px solid var(--border-color);">
                                    <h4 class="mb-0 text-white"><i class="fas fa-tag me-2"></i>User Titles</h4>
                                    <span class="badge bg-primary">Unlocked: @((ViewBag.AvailableTitles as List<UserTitle>)?.Count(t => (user?.Level >= t.LevelRequirement && !t.IsLocked) || unlockedTitles.Any(ut => (int)((dynamic)ut).TitleId == t.Id)) ?? 0)</span>
                                </div>
                                <div class="card-body">
                                    <div class="title-grid">
                                        <div class="title-item @(user?.EquippedTitleId == null ? "active" : "")" onclick="equipTitle(0)">
                                            <div class="title-preview-box" style="border-color: #ffffff; color: #ffffff;">
                                                None
                                            </div>
                                            <p class="mb-0 small mt-1 text-white-50">Remove Title</p>
                                        </div>
                                        @if (ViewBag.AvailableTitles is List<UserTitle> titles)
                                        {
                                            foreach (var title in titles)
                                            {
                                                var unlockedInfo = unlockedTitles.FirstOrDefault(ut => (int)((dynamic)ut).TitleId == title.Id);
                                                bool isAwarded = unlockedInfo != null && ((dynamic)unlockedInfo).Origin == UnlockOrigin.AdminAward;
                                                bool canEquip = (user?.Level >= title.LevelRequirement && !title.IsLocked) || unlockedInfo != null;
                                                <div class="title-item @(user?.EquippedTitleId == title.Id ? "active" : "") @(!canEquip ? "locked" : "")" onclick="@(canEquip ? $"equipTitle({title.Id})" : "")">
                                                    <div class="title-preview-box @(!canEquip ? "locked" : "")" style="border-color: @title.Color; color: @title.Color;">
                                                        @if (!canEquip)
                                                        {
                                                            <i class="fas fa-lock me-1"></i>
                                                            @if (user?.Level < title.LevelRequirement)
                                                            {
                                                                <span>Lvl @title.LevelRequirement</span>
                                                            }
                                                            else
                                                            {
                                                                <span>Locked</span>
                                                            }
                                                        }
                                                        else
                                                        {
                                                            @title.Name
                                                        }
                                                    </div>
                                                    @if (canEquip)
                                                    {
                                                        <div class="d-flex flex-column align-items-center">
                                                            <p class="mb-0 small mt-1 text-white-50">@title.Name</p>
                                                            @if (isAwarded)
                                                            {
                                                                <span class="badge bg-warning text-dark" style="font-size: 0.6rem;">Awarded</span>
                                                            }
                                                        </div>
                                                    }
                                                </div>
                                            }
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }

            
            <div class="row g-3 mb-4">
                @{
                    var stats = new[] {
                        new { Status = "PlanToRead", Label = "Plan to Read", Icon = "fas fa-bookmark", Gradient = "linear-gradient(135deg, #667eea, #764ba2)", Count = (int)ViewBag.PlanToReadCount },
                        new { Status = "Reading", Label = "Reading", Icon = "fas fa-book-open", Gradient = "linear-gradient(135deg, #f093fb, #f5576c)", Count = (int)ViewBag.ReadingCount },
                        new { Status = "Completed", Label = "Completed", Icon = "fas fa-check-circle", Gradient = "linear-gradient(135deg, #4facfe, #00f2fe)", Count = (int)ViewBag.CompletedCount },
                        new { Status = "OnHold", Label = "On Hold", Icon = "fas fa-pause-circle", Gradient = "linear-gradient(135deg, #fa709a, #fee140)", Count = (int)ViewBag.OnHoldCount },
                        new { Status = "Dropped", Label = "Dropped", Icon = "fas fa-times-circle", Gradient = "linear-gradient(135deg, #a8a8a8, #6c757d)", Count = (int)ViewBag.DroppedCount },
                        new { Status = (string)null, Label = "All", Icon = "fas fa-list", Gradient = "linear-gradient(135deg, #6366f1, #ec4899)", Count = (int)ViewBag.AllCount }
                    };
                }
                @foreach (var stat in stats)
                {
                    <div class="col-md-2">
                        <a href="@Url.Action("Profile", "Auth", new { status = stat.Status })" 
                           class="stat-card @(currentStatus == stat.Status ? "active" : "")">
                            <div class="stat-icon" style="background: @stat.Gradient;">
                                <i class="@stat.Icon"></i>
                            </div>
                            <div class="stat-info">
                                <div class="stat-number">@stat.Count</div>
                                <div class="stat-label">@stat.Label</div>
                            </div>
                        </a>
                    </div>
                }
            </div>

            
            <div class="row">
                <div class="col-12">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h3 class="mb-0">
                            @(string.IsNullOrEmpty(currentStatus) ? "All Bookmarks" : currentStatus.Replace("PlanToRead", "Plan to Read").Replace("OnHold", "On Hold"))
                        </h3>
                        <div class="d-flex gap-2">
                            @if (!string.IsNullOrEmpty(currentStatus))
                            {
                                <a href="@Url.Action("Profile", "Auth")" class="btn btn-sm btn-secondary">
                                    <i class="fas fa-times me-1"></i>Clear Filter
                                </a>
                            }
                            <div class="dropdown">
                                <button class="btn btn-sm btn-info dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="fas fa-sync-alt me-1"></i>AniList Sync
                                </button>
                                <ul class="dropdown-menu dropdown-menu-end dropdown-menu-dark" style="background: var(--bg-secondary); border: 1px solid var(--border-color);">
                                    <li>
                                        <a class="dropdown-item" href="@Url.Action("ExportAniListXml", "Auth")">
                                            <i class="fas fa-file-export me-2"></i>Export for AniList
                                        </a>
                                    </li>
                                    <li><hr class="dropdown-divider" style="border-color: var(--border-color);"></li>
                                    <li>
                                        <button class="dropdown-item" type="button" data-bs-toggle="modal" data-bs-target="#importModal">
                                            <i class="fas fa-file-import me-2"></i>Import from AniList/MAL

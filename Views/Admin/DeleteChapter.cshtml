@model Chapter
@{
    ViewData["Title"] = "Delete Chapter";
    var manga = ViewBag.Manga as Manga;
}

<div class="row justify-content-center">
    <div class="col-lg-6">
        <div class="admin-card border-danger">
            <div class="card-header bg-danger bg-opacity-10">
                <h4 class="text-white mb-0"><i class="fas fa-exclamation-triangle text-danger me-2"></i>Delete Chapter?</h4>
            </div>

            <div class="card-body">
                <p class="text-white-50 mb-4">
                    Are you sure you want to delete <strong>Chapter @Model.ChapterNumber.ToString("G29")</strong> of "<strong>@manga.Title</strong>"? This action cannot be undone and all associated pages will also be deleted.
                </p>

                <div style="background: var(--bg-tertiary); border: 1px solid var(--border-color); border-radius: 8px; padding: 1.25rem; margin-bottom: 2rem;">
                    <div class="mb-3">
                        <small class="text-white-50 d-block">Manga</small>
                        <strong class="text-white">@manga.Title</strong>
                    </div>
                    <div class="row text-center border-top border-secondary pt-3">
                        <div class="col-6">
                            <small class="text-white-50 d-block">Chapter</small>
                            <strong class="text-white">@Model.ChapterNumber.ToString("G29") @(string.IsNullOrEmpty(Model.Title) ? "" : $"- {Model.Title}")</strong>
                        </div>
                        <div class="col-6 border-start border-secondary">
                            <small class="text-white-50 d-block">Pages</small>
                            <strong class="text-white">@(Model.Pages?.Count ?? 0)</strong>
                        </div>
                    </div>
                </div>

                <form asp-action="DeleteChapter" method="post" class="d-flex gap-2">
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" name="mangaId" value="@manga.Id" />
                    <button type="submit" class="btn btn-danger flex-fill">
                        <i class="fas fa-trash me-2"></i>Yes, Delete Chapter
                    </button>
                    <a asp-action="ChapterList" asp-route-mangaId="@manga.Id" class="btn btn-secondary flex-fill">
                        <i class="fas fa-times me-2"></i>Cancel
                    </a>
                </form>
            </div>
        </div>
    </div>
</div>

<style>
    .admin-card {
        background: var(--bg-secondary);
        border: 1px solid var(--border-color);
        border-radius: 10px;
        margin-bottom: 2rem;
    }
    .card-header {
        padding: 1.25rem;
        border-bottom: 1px solid var(--border-color);
        background: rgba(0,0,0,0.1);
    }
    .card-body {
        padding: 1.25rem;
    }
</style>

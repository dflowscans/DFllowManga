@model ChapterPage
@{
    ViewData["Title"] = (Model != null && Model.Id > 0) ? "Edit Page" : "Add New Page";
    var chapter = ViewBag.Chapter;
}

<div class="admin-card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h4 class="text-white mb-0">
            <i class="fas @(Model?.Id > 0 ? "fa-edit" : "fa-plus-circle") me-2 text-primary"></i>@ViewData["Title"]
            <span class="text-white-50 small mx-2">/</span>
            <span class="fs-6 fw-normal text-white-50">@chapter.Manga.Title Ch. @chapter.ChapterNumber.ToString("G29")</span>
        </h4>
        <a asp-action="PageList" asp-route-chapterId="@chapter.Id" class="btn btn-sm btn-secondary">
            <i class="fas fa-arrow-left me-1"></i> Back to List
        </a>
    </div>

    <div class="card-body">
        <div class="row">
            <div class="col-lg-8">
                <form method="post">
                    @Html.AntiForgeryToken()
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-4"></div>

                    @if (Model != null && Model.Id > 0)
                    {
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="ChapterId" />
                        <input type="hidden" asp-for="CreatedAt" />
                    }
                    else
                    {
                        <input type="hidden" asp-for="ChapterId" value="@chapter.Id" />
                    }

                    <div class="mb-4">
                        <label asp-for="PageNumber" class="form-label text-white-50 small uppercase fw-bold">Page Number <span class="text-danger">*</span></label>
                        <input asp-for="PageNumber" type="number" min="1" class="form-control admin-input" placeholder="e.g., 1" required />
                        <span asp-validation-for="PageNumber" class="text-danger small"></span>
                    </div>

                    <div class="mb-4">
                        <label asp-for="ImageUrl" class="form-label text-white-50 small uppercase fw-bold">Image URL <span class="text-danger">*</span></label>
                        <div class="input-group">
                            <span class="input-group-text bg-dark border-secondary text-white-50"><i class="fas fa-link"></i></span>
                            <input asp-for="ImageUrl" class="form-control admin-input" placeholder="https://..." required />
                        </div>
                        <span asp-validation-for="ImageUrl" class="text-danger small"></span>
                        <div class="form-text text-white-50 small mt-2">Provide a direct link to the image file.</div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-4">
                            <label asp-for="Width" class="form-label text-white-50 small uppercase fw-bold">Width (px)</label>
                            <input asp-for="Width" type="number" class="form-control admin-input" placeholder="e.g., 1200" />
                            <span asp-validation-for="Width" class="text-danger small"></span>
                        </div>
                        <div class="col-md-6 mb-4">
                            <label asp-for="Height" class="form-label text-white-50 small uppercase fw-bold">Height (px)</label>
                            <input asp-for="Height" type="number" class="form-control admin-input" placeholder="e.g., 1600" />
                            <span asp-validation-for="Height" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="mt-4 pt-3 border-top border-secondary">
                        <button type="submit" class="btn btn-primary px-4 py-2 fw-bold">
                            <i class="fas fa-save me-2"></i>@(Model?.Id > 0 ? "Update Page" : "Add Page")
                        </button>
                        <a asp-action="PageList" asp-route-chapterId="@chapter.Id" class="btn btn-outline-secondary px-4 py-2 ms-2">Cancel</a>
                    </div>
                </form>
            </div>

            <div class="col-lg-4 mt-4 mt-lg-0">
                <div class="card bg-dark border-secondary h-100" style="background: var(--bg-tertiary) !important; border-color: var(--border-color) !important;">
                    <div class="card-body">
                        <h5 class="card-title text-white mb-4"><i class="fas fa-eye text-info me-2"></i>Preview</h5>
                        <div id="imagePreview" class="page-preview-container rounded border border-secondary border-opacity-25 d-flex align-items-center justify-content-center bg-black bg-opacity-25" style="min-height: 300px;">
                            @if (!string.IsNullOrEmpty(Model?.ImageUrl))
                            {
                                <img src="@Model.ImageUrl" class="img-fluid rounded" style="max-height: 400px;" />
                            }
                            else
                            {
                                <div class="text-center text-white-50">
                                    <i class="fas fa-image fa-3x mb-3 opacity-25"></i>
                                    <p class="small mb-0">Enter a URL to see preview</p>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .admin-card {
        background: var(--bg-secondary);
        border: 1px solid var(--border-color);
        border-radius: 12px;
        margin-bottom: 2rem;
        overflow: hidden;
    }
    .card-header {
        padding: 1.25rem 1.5rem;
        border-bottom: 1px solid var(--border-color);
        background: rgba(0,0,0,0.2);
    }
    .card-body {
        padding: 1.5rem;
    }
    .admin-input {
        background: var(--bg-tertiary) !important;
        border-color: var(--border-color) !important;
        color: var(--text-primary) !important;
    }
    .admin-input:focus {
        border-color: var(--primary-color) !important;
        box-shadow: 0 0 0 0.25rem rgba(99, 102, 241, 0.25) !important;
    }
    .uppercase {
        text-transform: uppercase;
        letter-spacing: 0.8px;
        font-size: 0.75rem;
    }
    .page-preview-container {
        position: relative;
        overflow: hidden;
    }
</style>

@section Scripts {
    <script>
        document.querySelector('input[name="ImageUrl"]').addEventListener('input', function(e) {
            const preview = document.getElementById('imagePreview');
            const url = e.target.value;
            if (url && (url.startsWith('http') || url.startsWith('/'))) {
                preview.innerHTML = `<img src="${url}" class="img-fluid rounded" style="max-height: 400px;" onerror="this.parentElement.innerHTML='<div class=\"text-center text-danger small\"><i class=\"fas fa-exclamation-circle fa-2x mb-2\"></i><p class=\"mb-0\">Failed to load image</p></div>'" />`;
            } else {
                preview.innerHTML = '<div class="text-center text-white-50"><i class="fas fa-image fa-3x mb-3 opacity-25"></i><p class="small mb-0">Enter a URL to see preview</p></div>';
            }
        });
    </script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

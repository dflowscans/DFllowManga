@model IEnumerable<ChapterComment>
@{
    ViewData["Title"] = "Manage Comments";
    var chapter = ViewBag.Chapter as Chapter;
    var user = ViewBag.User as User;
    string defaultAvatar = "https://wallpapers-clan.com/wp-content/uploads/2022/08/default-pfp-24.jpg";
}

<div class="admin-card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h4 class="text-white mb-0">
            <i class="fas fa-comments me-2 text-primary"></i>
            @if (chapter != null)
            {
                <text>Comments for @chapter.Manga?.Title - Ch. @(chapter.ChapterNumber % 1 == 0 ? chapter.ChapterNumber.ToString("0") : chapter.ChapterNumber.ToString("0.######").TrimEnd('0'))</text>
            }
            else if (user != null)
            {
                <text>Comments by @user.Username</text>
            }
            else
            {
                <text>All Comments</text>
            }
        </h4>
        @if (chapter != null)
        {
            <a asp-action="ChapterList" asp-route-mangaId="@chapter.MangaId" class="btn btn-sm btn-secondary">
                <i class="fas fa-arrow-left me-1"></i> Back to Chapters
            </a>
        }
    </div>

    <div class="card-body">
        
        <div class="mb-4">
            <form asp-action="ManageComments" method="get" class="d-flex gap-2">
                <input type="hidden" name="chapterId" value="@ViewBag.ChapterId" />
                <input type="hidden" name="userId" value="@ViewBag.UserId" />
                <input type="text" name="search" class="form-control admin-input" placeholder="Search comments or users..." value="@ViewBag.Search">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-search me-1"></i> Search
                </button>
                @if (!string.IsNullOrEmpty(ViewBag.Search) || ViewBag.ChapterId != null || ViewBag.UserId != null)
                {
                    <a asp-action="ManageComments" class="btn btn-secondary">Clear Filters</a>
                }
            </form>
        </div>

        <div class="table-responsive">
            <table class="table admin-table align-middle">
                <thead>
                    <tr class="text-white small uppercase">
                        <th style="width: 150px;">User</th>
                        <th>Comment</th>
                        <th style="width: 200px;">Context</th>
                        <th style="width: 150px;" class="text-center">Date</th>
                        <th style="width: 100px;" class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Any())
                    {
                        @foreach (var comment in Model)
                        {
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <img src="@(!string.IsNullOrWhiteSpace(comment.User?.ProfilePicture) ? comment.User.ProfilePicture : (!string.IsNullOrWhiteSpace(comment.User?.AvatarUrl) ? comment.User.AvatarUrl : defaultAvatar))" alt="" class="rounded-circle me-2" style="width: 32px; height: 32px; object-fit: cover;" onerror="this.src='@defaultAvatar'">
                                        <div class="text-white fw-medium text-truncate-1" style="max-width: 100px;">@(comment.User?.Username ?? "Unknown")</div>
                                    </div>
                                </td>
                                <td>
                                    <div class="text-white small mb-1">
                                        @if (comment.ParentCommentId != null)
                                        {
                                            <span class="badge bg-dark border border-secondary text-white py-0 px-2 me-1">Reply</span>
                                        }
                                    </div>
                                    <div class="text-white" style="word-break: break-word;">@comment.Content</div>
                                </td>
                                <td>
                                    <div class="text-truncate-1" style="max-width: 180px;">
                                        <a asp-action="ChapterList" asp-route-mangaId="@comment.Chapter?.MangaId" class="text-primary text-decoration-none small fw-bold">
                                            @comment.Chapter?.Manga?.Title
                                        </a>
                                    </div>
                                    <div class="text-white small">
                                        Ch. @(comment.Chapter?.ChapterNumber % 1 == 0 ? comment.Chapter?.ChapterNumber.ToString("0") : comment.Chapter?.ChapterNumber.ToString("0.######").TrimEnd('0'))
                                    </div>
                                </td>
                                <td class="text-center text-white small">
                                    @comment.CreatedAt.ToString("MMM dd, yyyy")<br>
                                    @comment.CreatedAt.ToString("HH:mm")
                                </td>
                                <td>
                                    <div class="d-flex justify-content-end">
                                        <form asp-action="DeleteComment" asp-route-id="@comment.Id" method="post" onsubmit="return confirm('Are you sure you want to delete this comment?');">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-sm btn-outline-danger" title="Delete Comment">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="5" class="text-center py-5 text-white-50">
                                <i class="fas fa-comment-slash mb-3 d-block fs-2"></i>
                                No comments found.
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@model IEnumerable<Manga>
@{
    ViewData["Title"] = "Manage Manga";
}

<div class="admin-card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h4 class="text-white mb-0"><i class="fas fa-book me-2"></i>Manga Directory</h4>
        <div class="d-flex gap-2">
            <a asp-action="CreateManga" class="btn btn-sm btn-success">
                <i class="fas fa-plus me-1"></i> Add New
            </a>
        </div>
    </div>

    <div class="card-body">
        
        <div class="mb-4">
            <form asp-action="MangaList" method="get" class="row g-3">
                <div class="col-md-6">
                    <label for="search" class="form-label text-white small uppercase fw-bold">Search Manga</label>
                    <div class="input-group">
                        <span class="input-group-text bg-dark border-secondary text-white"><i class="fas fa-search"></i></span>
                        <input type="text" name="search" id="search" class="form-control admin-input" placeholder="Title, author, etc..." value="@ViewBag.Search">
                        <button type="submit" class="btn btn-primary">
                            Search
                        </button>
                        @if (!string.IsNullOrEmpty(ViewBag.Search))
                        {
                            <a asp-action="MangaList" class="btn btn-secondary">Clear</a>
                        }
                    </div>
                </div>
            </form>
        </div>

        
        <div class="table-responsive">
            <table class="table admin-table align-middle">
                <thead>
                    <tr class="text-white small uppercase">
                        <th>Manga</th>
                        <th>Author</th>
                        <th>Status</th>
                        <th class="text-center">Chapters</th>
                        <th class="text-center">Rating</th>
                        <th class="text-center">Featured</th>
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Any())
                    {
                        foreach (var manga in Model)
                        {
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <img src="@manga.ImageUrl" alt="" class="manga-thumbnail me-3">
                                        <div>
                                            <div class="fw-bold text-white text-truncate-1" style="max-width: 300px;">@manga.Title</div>
                                            <div class="text-white small opacity-75">Added @manga.CreatedAt.ToString("MMM dd, yyyy")</div>
                                        </div>
                                    </div>
                                </td>
                                <td><span class="text-white">@(manga.Author ?? "N/A")</span></td>
                                <td>
                                    <span class="badge @(manga.Status?.ToLower() == "completed" ? "bg-success" : "bg-primary") rounded-pill px-3">
                                        @(manga.Status ?? "Unknown")
                                    </span>
                                </td>
                                <td class="text-center">
                                    <span class="badge bg-dark border border-secondary text-white rounded-pill px-3">
                                        @(manga.Chapters?.Count ?? 0)
                                    </span>
                                </td>
                                <td class="text-center text-warning">
                                    <i class="fas fa-star me-1"></i>@((int)Math.Round(manga.Rating.GetValueOrDefault() / 10.0))
                                </td>
                                <td class="text-center">
                                    @if (manga.IsFeatured)
                                    {
                                        <span class="text-success"><i class="fas fa-check-circle"></i></span>
                                    }
                                    else
                                    {
                                        <span class="text-white-50 opacity-25"><i class="fas fa-times-circle"></i></span>
                                    }
                                </td>
                                <td>
                                    <div class="d-flex justify-content-end gap-1">
                                        <a asp-action="EditManga" asp-route-id="@manga.Id" class="btn btn-sm btn-outline-primary" title="Edit Manga">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-action="ChapterList" asp-route-mangaId="@manga.Id" class="btn btn-sm btn-outline-info" title="Chapters">
                                            <i class="fas fa-list"></i>
                                        </a>
                                        <a asp-action="DeleteManga" asp-route-id="@manga.Id" class="btn btn-sm btn-outline-danger" title="Delete">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="7" class="text-center py-5 text-white">
                                <i class="fas fa-book-open fa-3x mb-3 opacity-25"></i>
                                <p class="mb-0">No manga series found. Start by creating one!</p>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<style>
    .admin-card {
        background: var(--bg-secondary);
        border: 1px solid var(--border-color);
        border-radius: 12px;
        margin-bottom: 2rem;
        overflow: hidden;
    }
    .card-header {
        padding: 1.25rem 1.5rem;
        border-bottom: 1px solid var(--border-color);
        background: rgba(0,0,0,0.2);
    }
    .card-body {
        padding: 1.5rem;
    }
    .admin-input {
        background: var(--bg-tertiary) !important;
        border-color: var(--border-color) !important;
        color: var(--text-primary) !important;
    }
    .admin-input:focus {
        border-color: var(--primary-color) !important;
        box-shadow: 0 0 0 0.25rem rgba(99, 102, 241, 0.25) !important;
    }
    .admin-table {
        color: var(--text-primary);
        margin-bottom: 0;
    }
    .admin-table thead th {
        background: rgba(0,0,0,0.1);
        border-bottom: 1px solid var(--border-color);
        padding: 1rem;
        font-weight: 600;
    }
    .admin-table tbody td {
        padding: 1rem;
        border-bottom: 1px solid rgba(255,255,255,0.05);
    }
    .admin-table tbody tr:last-child td {
        border-bottom: none;
    }
    .admin-table tbody tr:hover {
        background: rgba(255,255,255,0.02);
    }
    .manga-thumbnail {
        width: 45px;
        height: 60px;
        object-fit: cover;
        border-radius: 6px;
        border: 1px solid var(--border-color);
    }
    .uppercase {
        text-transform: uppercase;
        letter-spacing: 0.8px;
        font-size: 0.75rem;
    }
</style>

@using MangaReader.Models
@{
    ViewData["Title"] = "Import Blogger Series";
}

<div class="admin-card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <div>
            <h4 class="text-white mb-0">
                <i class="fab fa-blogger me-2 text-primary"></i>Blogger Series Importer
            </h4>
            <p class="text-white-50 small mb-0 mt-1">Create a new series by importing data from a Blogger post.</p>
        </div>
    </div>
    
    <div class="card-body">
        <form asp-action="BloggerSeriesImport" method="post" id="importForm">
            @Html.AntiForgeryToken()
            
            <div class="row g-4">
                <div class="col-md-8">
                    <div class="mb-4">
                        <label for="htmlContent" class="form-label text-white-50 small uppercase fw-bold">Blogger Post HTML Content</label>
                        <textarea class="form-control admin-input" id="htmlContent" name="htmlContent" rows="10" 
                                  placeholder="Paste the HTML code of the Blogger post here..." required></textarea>
                        <div class="form-text text-white-50 smaller">
                            Paste the HTML containing cover image, description, release year, and chapter hook.
                        </div>
                    </div>

                    <div class="mb-4">
                        <label for="tags" class="form-label text-white-50 small uppercase fw-bold">Blogger Post Tags (Comma-separated)</label>
                        <input type="text" class="form-control admin-input" id="tags" name="tags" 
                               placeholder="e.g. Series,She is gorgeous,Manhua,Dropped,Josei,Age Gap,Comedy,Drama,Romance,Showbiz" required>
                        <div class="form-text text-white-50 smaller">
                            Tags used to determine Type (Manga/Manhua/Manhwa), Status, and Genres.
                        </div>
                    </div>

                    <div class="mt-4">
                        <button type="submit" class="btn btn-primary w-100 py-2 fw-bold" id="submitBtn">
                            <i class="fas fa-magic me-2"></i> Import Series
                        </button>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="p-4 rounded border border-secondary bg-dark bg-opacity-25 h-100">
                        <h6 class="text-primary fw-bold mb-3"><i class="fas fa-info-circle me-2"></i> How it works</h6>
                        <ul class="small text-white-50 ps-3 mb-0">
                            <li class="mb-3"><strong>Title:</strong> Extracted from <code>data-labelchapter</code> attribute.</li>
                            <li class="mb-3"><strong>Cover Image:</strong> Extracted from first <code>&lt;img&gt;</code> within a <code>separator</code> div.</li>
                            <li class="mb-3"><strong>Description:</strong> Extracted from element with ID <code>syn_bod</code>.</li>
                            <li class="mb-3"><strong>Type:</strong> Identified from tags (Manga, Manhua, or Manhwa).</li>
                            <li class="mb-3"><strong>Status:</strong> Identified from tags (Dropped, Ongoing, Completed, or Hiatus).</li>
                            <li class="mb-0"><strong>Genres:</strong> All other tags are automatically added as genres.</li>
                        </ul>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

<div id="loadingOverlay" class="d-none" style="position: fixed; top: 0; left: 0; width: 100%; height: 100%; background: rgba(0,0,0,0.7); z-index: 9999; display: flex; align-items: center; justify-content: center; flex-direction: column;">
    <div class="spinner-border text-primary mb-3" role="status" style="width: 3rem; height: 3rem;">
        <span class="visually-hidden">Loading...</span>
    </div>
    <h5 class="text-white">Processing Import...</h5>
</div>

@section Scripts {
    <script>
        document.getElementById('importForm').addEventListener('submit', function() {
            document.getElementById('loadingOverlay').classList.remove('d-none');
            document.getElementById('submitBtn').disabled = true;
            document.getElementById('submitBtn').innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i> Processing...';
        });
    </script>
}

<style>
    .admin-card {
        background: var(--bg-secondary);
        border: 1px solid var(--border-color);
        border-radius: 12px;
        margin-top: 2rem;
        overflow: hidden;
    }
    .card-header {
        padding: 1.5rem;
        border-bottom: 1px solid var(--border-color);
        background: rgba(0,0,0,0.2);
    }
    .card-body {
        padding: 2rem;
    }
    .admin-input {
        background: var(--bg-tertiary) !important;
        border-color: var(--border-color) !important;
        color: var(--text-primary) !important;
    }
    .admin-input:focus {
        border-color: var(--primary-color) !important;
        box-shadow: 0 0 0 0.25rem rgba(99, 102, 241, 0.25) !important;
    }
    .uppercase {
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }
    .smaller {
        font-size: 0.75rem;
    }
</style>

@model Manga
@{
    ViewData["Title"] = "Delete Manga";
}

<div class="row justify-content-center">
    <div class="col-lg-6">
        <div class="admin-card border-danger">
            <div class="card-header bg-danger bg-opacity-10">
                <h4 class="text-white mb-0"><i class="fas fa-exclamation-triangle text-danger me-2"></i>Delete Manga?</h4>
            </div>
            
            <div class="card-body">
                <p class="text-white-50 mb-4">
                    Are you sure you want to delete "<strong>@Model.Title</strong>"? This action cannot be undone and all associated chapters and pages will also be deleted.
                </p>

                <div style="background: var(--bg-tertiary); border: 1px solid var(--border-color); border-radius: 8px; padding: 1.25rem; margin-bottom: 2rem;">
                    <div class="d-flex align-items-center mb-3">
                        <img src="@Model.ImageUrl" alt="" style="width: 60px; height: 80px; object-fit: cover; border-radius: 4px; margin-right: 15px;">
                        <div>
                            <h5 class="text-white mb-1">@Model.Title</h5>
                            <p class="text-white-50 small mb-0">By @(Model.Author ?? "N/A")</p>
                        </div>
                    </div>
                    <div class="row text-center border-top border-secondary pt-3 mt-3">
                        <div class="col-6">
                            <small class="text-white-50 d-block">Chapters</small>
                            <strong class="text-white">@(Model.Chapters?.Count ?? 0)</strong>
                        </div>
                        <div class="col-6 border-start border-secondary">
                            <small class="text-white-50 d-block">Status</small>
                            <span class="badge bg-primary">@(Model.Status ?? "Unknown")</span>
                        </div>
                    </div>
                </div>

                <form asp-action="DeleteManga" method="post" class="d-flex gap-2">
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="Id" />
                    <button type="submit" class="btn btn-danger flex-fill">
                        <i class="fas fa-trash me-2"></i>Yes, Delete Manga
                    </button>
                    <a href="@Url.Action("MangaList", "Admin")" class="btn btn-secondary flex-fill">
                        <i class="fas fa-times me-2"></i>Cancel
                    </a>
                </form>
            </div>
        </div>
    </div>
</div>

<style>
    .admin-card {
        background: var(--bg-secondary);
        border: 1px solid var(--border-color);
        border-radius: 10px;
        margin-bottom: 2rem;
    }
    .card-header {
        padding: 1.25rem;
        border-bottom: 1px solid var(--border-color);
        background: rgba(0,0,0,0.1);
    }
    .card-body {
        padding: 1.25rem;
    }
</style>

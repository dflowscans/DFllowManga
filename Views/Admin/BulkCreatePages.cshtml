@using MangaReader.Models
@{
    ViewData["Title"] = "Bulk Add Pages";
    var chapter = ViewBag.Chapter;
}

<div class="admin-card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h4 class="text-white mb-0">
            <i class="fas fa-layer-group me-2 text-primary"></i>Bulk Upload Pages
            <span class="text-white-50 small mx-2">/</span>
            <span class="fs-6 fw-normal text-white-50">@chapter?.Manga?.Title Ch. @chapter?.ChapterNumber.ToString("G29")</span>
        </h4>
        <a asp-action="PageList" asp-route-chapterId="@(chapter?.Id)" class="btn btn-sm btn-secondary">
            <i class="fas fa-arrow-left me-1"></i> Back to Pages
        </a>
    </div>

    <div class="card-body">
        <div class="row">
            <div class="col-lg-8">
                <form asp-action="BulkCreatePages" method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="chapterId" value="@(chapter?.Id)" />
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-4"></div>

                    <div class="mb-4">
                        <label for="imageUrls" class="form-label text-white-50 small uppercase fw-bold">Image URLs (one per line) <span class="text-danger">*</span></label>
                        <textarea class="form-control admin-input" 
                                  id="imageUrls" 
                                  name="imageUrls" 
                                  rows="15" 
                                  placeholder="https://example.com/page1.jpg&#10;https://example.com/page2.jpg&#10;https://example.com/page3.jpg&#10;..."
                                  style="font-family: 'Courier New', monospace; font-size: 0.85rem;"
                                  required></textarea>
                        <div class="form-text text-white-50 small mt-2">Paste your image URLs here, one per line. They will be numbered automatically.</div>
                    </div>

                    <div id="urlPreview" class="alert alert-info border-info bg-dark bg-opacity-50 small mb-4 d-none">
                        <i class="fas fa-info-circle me-2"></i>
                        <span id="urlCount">0</span> page(s) ready to upload.
                    </div>

                    <div class="mt-4 pt-3 border-top border-secondary">
                        <button type="submit" class="btn btn-primary px-4 py-2 fw-bold">
                            <i class="fas fa-upload me-2"></i>Upload All Pages
                        </button>
                        <a asp-action="PageList" asp-route-chapterId="@(chapter?.Id)" class="btn btn-outline-secondary px-4 py-2 ms-2">Cancel</a>
                    </div>
                </form>
            </div>

            <div class="col-lg-4 mt-4 mt-lg-0">
                <div class="card bg-dark border-secondary h-100" style="background: var(--bg-tertiary) !important; border-color: var(--border-color) !important;">
                    <div class="card-body">
                        <h5 class="card-title text-white mb-4"><i class="fas fa-lightbulb text-warning me-2"></i>Bulk Upload Tips</h5>
                        
                        <div class="mb-4">
                            <h6 class="text-info small uppercase fw-bold mb-2">Instructions</h6>
                            <ul class="list-unstyled text-white-50 small mb-0">
                                <li class="mb-2"><i class="fas fa-check me-2 text-success"></i> Paste one direct image URL per line.</li>
                                <li class="mb-2"><i class="fas fa-check me-2 text-success"></i> Order of URLs will determine page order.</li>
                                <li class="mb-2"><i class="fas fa-check me-2 text-success"></i> Empty lines are ignored automatically.</li>
                                <li class="mb-2"><i class="fas fa-check me-2 text-success"></i> Supports JPG, PNG, WEBP, etc.</li>
                            </ul>
                        </div>

                        <div class="alert alert-warning border-warning bg-dark bg-opacity-50 small mb-0">
                            <i class="fas fa-exclamation-triangle me-2"></i> Ensure all URLs are direct links to the image files.
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .admin-card {
        background: var(--bg-secondary);
        border: 1px solid var(--border-color);
        border-radius: 12px;
        margin-bottom: 2rem;
        overflow: hidden;
    }
    .card-header {
        padding: 1.25rem 1.5rem;
        border-bottom: 1px solid var(--border-color);
        background: rgba(0,0,0,0.2);
    }
    .card-body {
        padding: 1.5rem;
    }
    .admin-input {
        background: var(--bg-tertiary) !important;
        border-color: var(--border-color) !important;
        color: var(--text-primary) !important;
    }
    .admin-input:focus {
        border-color: var(--primary-color) !important;
        box-shadow: 0 0 0 0.25rem rgba(99, 102, 241, 0.25) !important;
    }
    .uppercase {
        text-transform: uppercase;
        letter-spacing: 0.8px;
        font-size: 0.75rem;
    }
</style>

@section Scripts {
    <script>
        document.getElementById('imageUrls').addEventListener('input', function(e) {
            const text = e.target.value;
            const urls = text.split('\n').filter(line => line.trim().length > 0);
            const preview = document.getElementById('urlPreview');
            const count = document.getElementById('urlCount');
            
            if (urls.length > 0) {
                preview.classList.remove('d-none');
                count.innerText = urls.length;
            } else {
                preview.classList.add('d-none');
            }
        });
    </script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
